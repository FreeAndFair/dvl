<Window x:Class="UI.StationWindows.AcceptManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accept Manager" Height="300" Width="300"
        WindowStartupLocation="CenterScreen"
        Icon="../Icon.ico">
    <Grid>
        <Label Content="Enter the password (shown on the manager)" Height="28" HorizontalAlignment="Center" Margin="0,10,0,0" Name="TitleLabel" VerticalAlignment="Top" />
        <PasswordBox Height="45" HorizontalAlignment="Center" Margin="0,83,0,0" Name="PwTextbox" VerticalAlignment="Top" Width="206" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PasswordChanged="PwTextboxPasswordChanged" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="49,184,0,0" Name="CancelButton" VerticalAlignment="Top" Width="75" Click="CancelButtonClick" IsCancel="True" />
        <Button Content="OK" Height="23" HorizontalAlignment="Left" Margin="161,184,0,0" Name="OKButton" VerticalAlignment="Top" Width="75" Click="OkButtonClick" IsDefault="True" />
        <Label Content="Manager Name" Height="28" HorizontalAlignment="Center" Margin="0,49,0,0" Name="ManagerLabel" VerticalAlignment="Top" Width="208" HorizontalContentAlignment="Center" />
    </Grid>
</Window>
