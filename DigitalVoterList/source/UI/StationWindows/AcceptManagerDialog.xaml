<Window x:Class="UI.StationWindows.AcceptManagerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Accept Manager" Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        Icon="../Icon.ico">
    <Grid>
        <Label Content="Enter the password (shown on the Manager)" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,0" Name="TitleLabel" VerticalAlignment="Top" />
        <PasswordBox Height="45" HorizontalAlignment="Center" Margin="76,100,76,0" Name="PwTextbox" VerticalAlignment="Top" Width="240" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" PasswordChanged="PwTextboxPasswordChanged" FontSize="16" BorderThickness="2" />
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="100,184,0,0" Name="CancelButton" VerticalAlignment="Top" Width="80" Click="CancelButtonClick" IsCancel="True" FontSize="16"/>
        <Button Content="OK" HorizontalAlignment="Right" Margin="0,184,100,0" Name="OKButton" VerticalAlignment="Top" Width="80" Click="OkButtonClick" IsDefault="True" FontSize="16" />
        <Label Content="Manager Name" HorizontalAlignment="Center" Margin="0,50,0,0" Name="ManagerLabel" VerticalAlignment="Top" HorizontalContentAlignment="Center" FontSize="16" />
    </Grid>
</Window>
