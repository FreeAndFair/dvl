<Window x:Name="Wrong_Location" x:Class="UI.StationWindows.WrongLocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wrong Location" Height="600" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Name="VoterName" Content="Voter Name" HorizontalAlignment="Center" Margin="0,38,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="22" TextAlignment="Center"><Run Text="is at the incorrect polling location. "/><LineBreak/><Run Text="The correct location is:"/></TextBlock>
        <TextBlock Name="LocationAddress" HorizontalAlignment="Center" Margin="0,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22"><Run Text="LOCATION" /></TextBlock>
        <Button Content="Show Directions" HorizontalAlignment="Left" VerticalAlignment="Top" Width="180" Click="DirectionsClick" FontSize="20" Margin="128,468,0,0"/>
        <Button Content="Continue" HorizontalAlignment="Left" VerticalAlignment="Top" Width="110" Click="ContinueClick" FontSize="20" IsDefault="True" Margin="328,468,0,0"/>

    </Grid>
</Window>
