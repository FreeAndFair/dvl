<Window x:Class="UI.ManagerWindows.CheckMasterPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Authentication" Height="400" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Enter the Master Password" HorizontalAlignment="Center" Margin="0,40,0,270" Name="TitleLabel" FontSize="24"/>
        <Button Content="Cancel" Width="80" HorizontalAlignment="Left" Margin="200,280,0,0" Name="CancelButton" VerticalAlignment="Top" Click="CancelButtonClick" FontSize="20" Focusable="False"/>
        <Button Content="OK" Width="80" HorizontalAlignment="Right" Margin="0,280,200,0" Name="OKButton" VerticalAlignment="Top" Click="OkButtonClick" IsDefault="True" FontSize="20" Focusable="False"/>
        <PasswordBox Height="45" HorizontalAlignment="Center" Margin="94,200,94,0" Name="PwTextbox" VerticalAlignment="Top" Width="206" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2" FontSize="20"/>
        <TextBlock Name="AuthenticationReason" Text="Why do we need the master password?" MaxWidth="360" HorizontalAlignment="Center" Margin="41,100,41,190" TextAlignment="Center" TextWrapping="Wrap"  FontSize="20" />
    </Grid>
</Window>
