<Window x:Class="UI.ManagerWindows.CheckMasterPasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Administrator Authentication" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Content="Enter the Master Password" HorizontalAlignment="Center" Margin="0,10,0,300" Name="TitleLabel" FontSize="20"/>
        <Button Content="Cancel" Width="80" HorizontalAlignment="Left" Margin="100,250,0,0" Name="CancelButton" VerticalAlignment="Top" Click="CancelButtonClick" FontSize="16"/>
        <Button Content="OK" Width="80" HorizontalAlignment="Right" Margin="0,250,100,0" Name="OKButton" VerticalAlignment="Top" Click="OkButtonClick" IsDefault="True" FontSize="16"/>
        <PasswordBox Height="45" HorizontalAlignment="Center" Margin="80,170,80,0" Name="PwTextbox" VerticalAlignment="Top" Width="206" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderThickness="2" />
        <TextBlock Name="AuthenticationReason" Text="Why do we need the master password?" MaxWidth="360" HorizontalAlignment="Center" Margin="40,70,40,220" TextAlignment="Center" TextWrapping="Wrap"  FontSize="18" />
    </Grid>
</Window>
