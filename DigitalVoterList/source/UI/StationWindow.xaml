<Window x:Class="UI.StationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Aegis DVL" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Icon="Icon.ico">
    
    <DockPanel Width="Auto" Height="Auto" LastChildFill="True">
        <Menu IsMainMenu="True" Width="Auto" Height="Auto" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Mark voter" Click="MarkVoterClick" Name="MarkVoterMenuItem"/>
                <MenuItem Header="Export data" Click="ExportDataClick" Name="ExportDataMenuItem"/>
                <MenuItem Header="Exit" Click="ExitClick" Name="ExitMenuItem"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="User manual" Click="HelpClick"/>
            </MenuItem>
        </Menu>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Width="Auto" Height="Auto" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">

        </Frame>
    </DockPanel>
</Window>